@model leave_management.Data.LeaveRequest

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}


<form method="post" asp-action="DeletePost">
    <input type="hidden" asp-for="Id" />
    <div class="border p-3">
        <div class="form-group">
            <h2 class="text-info pl-3">Delete Category</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DateRequested"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DateRequested" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>
