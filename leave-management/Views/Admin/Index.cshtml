@model IEnumerable<leave_management.Data.ApplicationUser>
@using leave_management.Utility

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3 bg-white">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">User List</h2>
        </div>
        <div class="col-6">
            <a asp-action="Leaves" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; List New Leaves
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.UserName</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@obj.Id" class="btn btn-primary">
                                <i class="fas fa-edit"></i> Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Leave Exists...</p>
    }



</div>

