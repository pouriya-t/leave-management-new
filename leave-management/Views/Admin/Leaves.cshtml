@model IEnumerable<leave_management.Data.LeaveRequest>
@using leave_management.Utility


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3 bg-white">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List New Leaves</h2>
        </div>
        <div class="col-6">
            <a asp-action="Index" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Back
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        User Name
                    </th>
                    <th>
                        Name User
                    </th>
                    <th>
                        Date Requested
                    </th>
                    <th>
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.ApplicationUser.Email</td>
                        <td>@obj.ApplicationUser.UserName</td>
                        <td>@obj.ApplicationUser.Firstname</td>
                        <td>@obj.DateRequested</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            @if (User.IsInRole(Helper.Admin))
                            {
                                <a asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                                    Delete
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Leave Exists...</p>
    }



</div>

